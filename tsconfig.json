{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "paths": {
      "@types": ["types"],
      "@types/*": ["types/*"],
      "@utils": ["utils"],
      "@utils/*": ["utils/*"],
      "@controllers": ["controllers"],
      "@controllers/*": ["controllers/*"],
      "@routes": ["routes"],
      "@routes/*": ["routes/*"],
      "@middlewares": ["middlewares"],
      "@middlewares/*": ["middlewares/*"],
      "@schema": ["schema"],
      "@schema/*": ["schema/*"],
      "@lib": ["lib"],
      "@lib/*": ["lib/*"]
    }
  }
}
